<!-- views/partials/breadcrumb.ejs -->
<% const onHome = typeof isHome !== 'undefined' ? isHome : false; %>

<% if (!onHome) { %>
  <p class="breadcrumb">
    <a href="/">Home</a>
    <% if (category && category.toLowerCase() !== 'home') { %>
      &gt; <span><%= category %></span>
    <% } %>
  </p>
<% } %>